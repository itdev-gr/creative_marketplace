---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;
---

<Layout title="My Services – Creative Marketplace">
  <div class="min-h-screen flex flex-col bg-slate-50">
    <header class="border-b border-slate-200/80 bg-white/80 backdrop-blur-sm sticky top-0 z-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
        <a href="/" class="text-lg font-semibold text-slate-800 tracking-tight hover:text-violet-600 transition-colors">
          Creative Marketplace
        </a>
        <nav id="services-header-nav" class="flex items-center gap-3">
          <p class="text-sm text-slate-500">Loading…</p>
        </nav>
      </div>
    </header>

    <main class="flex-1 max-w-6xl mx-auto w-full px-4 sm:px-6 py-6">
      <h1 class="text-2xl font-bold text-slate-900 mb-6">My Services</h1>
      <p class="text-sm text-slate-600 mb-6">Add, edit, and delete your service listings.</p>

      <div id="services-mount" class="space-y-8">
        <p class="text-slate-500">Loading…</p>
      </div>
    </main>
  </div>

  <script>
    import { subscribeAuth, getCurrentUser, isAuthReady } from '../../lib/firebase/authState';
    import { signOut } from '../../lib/services/authService';
    import {
      getListingsBySeller,
      createListing,
      updateListing,
      deleteListing,
    } from '../../lib/services/listingsService';
    const mount = document.getElementById('services-mount');
    const nav = document.getElementById('services-header-nav');

    function redirectIfNeeded() {
      if (!isAuthReady()) return true;
      const user = getCurrentUser();
      if (!user) {
        window.location.href = '/login';
        return false;
      }
      if (user.profile?.accountType !== 'seller') {
        window.location.href = '/discover';
        return false;
      }
      return true;
    }

    function renderHeader(user: NonNullable<ReturnType<typeof getCurrentUser>>) {
      if (!nav) return;
      const displayName = user.profile?.displayName ?? 'Seller';
      const initials = displayName.split(/\s+/).map((w) => w[0]).slice(0, 2).join('').toUpperCase() || '?';
      nav.innerHTML = `
        <a href="/seller/setup" class="text-sm font-medium text-slate-600 hover:text-slate-900 px-3 py-2 rounded-lg hover:bg-slate-100">Seller profile</a>
        <a href="/seller/dashboard" class="text-sm font-medium text-slate-600 hover:text-slate-900 px-3 py-2 rounded-lg hover:bg-slate-100">Dashboard</a>
        <a href="/seller/services" class="text-sm font-medium text-slate-900 px-3 py-2 rounded-lg bg-slate-100">My Services</a>
        <a href="/profile/me" class="text-sm font-medium text-slate-600 hover:text-slate-900 px-3 py-2 rounded-lg hover:bg-slate-100">My Profile</a>
        <div id="services-profile-wrap" class="relative">
          <button type="button" id="services-profile-trigger" class="flex items-center justify-center w-9 h-9 rounded-full bg-slate-200 text-slate-700 text-sm font-semibold hover:bg-slate-300 transition-colors" aria-label="Profile menu" aria-expanded="false" aria-haspopup="true">${initials}</button>
          <div id="services-profile-dropdown" class="absolute right-0 top-full mt-1.5 w-56 rounded-lg bg-slate-50 shadow-xl border border-slate-200 py-2 hidden z-30">
            <div class="px-4 py-3 flex items-center gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center text-sm font-semibold text-slate-700">${initials}</div>
              <div class="min-w-0">
                <p class="font-semibold text-slate-900 truncate">${displayName}</p>
                <p class="text-xs text-slate-500">Selling</p>
              </div>
            </div>
            <hr class="border-slate-200 my-2" />
            <a href="/seller/dashboard" class="profile-menu-item flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">Dashboard</a>
            <a href="/seller/services" class="profile-menu-item flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">My Services</a>
            <a href="/profile/me" class="profile-menu-item flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900">Settings</a>
            <hr class="border-slate-200 my-2" />
            <button type="button" id="services-profile-logout" class="profile-menu-item w-full flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-100 hover:text-slate-900 text-left">Logout</button>
          </div>
        </div>
      `;
      const wrap = document.getElementById('services-profile-wrap');
      const trigger = document.getElementById('services-profile-trigger');
      const dropdown = document.getElementById('services-profile-dropdown');
      const open = () => { dropdown?.classList.remove('hidden'); trigger?.setAttribute('aria-expanded', 'true'); };
      const close = () => { dropdown?.classList.add('hidden'); trigger?.setAttribute('aria-expanded', 'false'); };
      const toggle = () => { if (dropdown?.classList.contains('hidden')) open(); else close(); };
      trigger?.addEventListener('click', (e) => { e.stopPropagation(); toggle(); });
      wrap?.addEventListener('mouseenter', open);
      wrap?.addEventListener('mouseleave', close);
      document.getElementById('services-profile-logout')?.addEventListener('click', () => {
        signOut().then(() => { window.location.href = '/'; });
      });
      document.addEventListener('click', (e) => { if (wrap && !wrap.contains(e.target as Node)) close(); });
    }

    async function loadAndRender() {
      if (!mount || !redirectIfNeeded()) return;
      const user = getCurrentUser();
      if (!user?.id) return;

      mount.innerHTML = '<p class="text-slate-500">Loading…</p>';
      renderHeader(user);

      try {
        const listings = await getListingsBySeller(user.id);

        let html = `
          <section class="space-y-3">
            <h2 class="text-lg font-semibold text-slate-900">Add listing</h2>
            <form id="services-add-form" class="border border-slate-200 rounded-lg bg-white p-4 space-y-3 max-w-md">
              <div>
                <label for="services-add-title" class="block text-sm font-medium text-slate-700">Title</label>
                <input type="text" id="services-add-title" name="title" required class="mt-1 block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-violet-500 focus:ring-1 focus:ring-violet-500" placeholder="e.g. 1-hour photoshoot" />
              </div>
              <div>
                <label for="services-add-desc" class="block text-sm font-medium text-slate-700">Description (optional)</label>
                <textarea id="services-add-desc" name="description" rows="2" class="mt-1 block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-violet-500 focus:ring-1 focus:ring-violet-500" placeholder="Short description"></textarea>
              </div>
              <button type="submit" id="services-add-submit" class="rounded-md bg-violet-600 px-4 py-2 text-sm font-semibold text-white hover:bg-violet-500">Add listing</button>
            </form>
          </section>

          <section class="space-y-3">
            <h2 class="text-lg font-semibold text-slate-900">Your listings</h2>
        `;

        if (listings.length === 0) {
          html += '<p class="text-slate-500 py-4">No listings yet. Add one above.</p>';
        } else {
          listings.forEach((listing) => {
            const desc = listing.description ? listing.description.replace(/</g, '&lt;').replace(/>/g, '&gt;') : '';
            const titleEsc = listing.title.replace(/</g, '&lt;').replace(/>/g, '&gt;');
            html += `
              <div class="border border-slate-200 rounded-lg bg-white p-4" data-listing-id="${listing.id}">
                <div class="listing-view">
                  <p class="font-medium text-slate-900">${titleEsc}</p>
                  ${desc ? `<p class="text-sm text-slate-600 mt-1">${desc}</p>` : ''}
                  <div class="mt-3 flex gap-2">
                    <button type="button" class="listing-edit rounded-md border border-slate-300 px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50" data-listing-id="${listing.id}">Edit</button>
                    <button type="button" class="listing-delete rounded-md border border-red-200 px-3 py-1.5 text-sm font-medium text-red-700 hover:bg-red-50" data-listing-id="${listing.id}">Delete</button>
                  </div>
                </div>
                <div class="listing-edit-form hidden mt-2 space-y-2">
                  <input type="text" class="listing-edit-title block w-full rounded-md border border-slate-300 px-3 py-2 text-sm" value="${titleEsc}" data-listing-id="${listing.id}" />
                  <textarea class="listing-edit-desc block w-full rounded-md border border-slate-300 px-3 py-2 text-sm" rows="2" data-listing-id="${listing.id}">${desc}</textarea>
                  <div class="flex gap-2">
                    <button type="button" class="listing-save rounded-md bg-violet-600 px-3 py-1.5 text-sm font-semibold text-white hover:bg-violet-500" data-listing-id="${listing.id}">Save</button>
                    <button type="button" class="listing-cancel rounded-md border border-slate-300 px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50" data-listing-id="${listing.id}">Cancel</button>
                  </div>
                </div>
              </div>
            `;
          });
        }
        html += '</section>';
        mount.innerHTML = html;

        const addForm = document.getElementById('services-add-form') as HTMLFormElement;
        const addSubmit = document.getElementById('services-add-submit') as HTMLButtonElement;
        addForm?.addEventListener('submit', async (e) => {
          e.preventDefault();
          const title = (addForm.querySelector('[name="title"]') as HTMLInputElement)?.value?.trim();
          const description = (addForm.querySelector('[name="description"]') as HTMLTextAreaElement)?.value?.trim();
          if (!title || !user?.id) return;
          addSubmit.disabled = true;
          try {
            await createListing(user.id, { title, description: description || undefined });
            await loadAndRender();
          } catch (err) {
            console.error(err);
          } finally {
            addSubmit.disabled = false;
          }
        });

        mount.querySelectorAll('.listing-edit').forEach((btn) => {
          btn.addEventListener('click', () => {
            const id = (btn as HTMLElement).dataset.listingId;
            const card = mount?.querySelector(`[data-listing-id="${id}"]`);
            card?.querySelector('.listing-view')?.classList.add('hidden');
            card?.querySelector('.listing-edit-form')?.classList.remove('hidden');
          });
        });
        mount.querySelectorAll('.listing-cancel').forEach((btn) => {
          btn.addEventListener('click', () => {
            const id = (btn as HTMLElement).dataset.listingId;
            const card = mount?.querySelector(`[data-listing-id="${id}"]`);
            card?.querySelector('.listing-view')?.classList.remove('hidden');
            card?.querySelector('.listing-edit-form')?.classList.add('hidden');
          });
        });
        mount.querySelectorAll('.listing-save').forEach((btn) => {
          btn.addEventListener('click', async () => {
            const id = (btn as HTMLElement).dataset.listingId;
            if (!id || !user?.id) return;
            const card = mount?.querySelector(`[data-listing-id="${id}"]`);
            const titleInput = card?.querySelector('.listing-edit-title') as HTMLInputElement;
            const descInput = card?.querySelector('.listing-edit-desc') as HTMLTextAreaElement;
            const title = titleInput?.value?.trim();
            if (!title) return;
            (btn as HTMLButtonElement).disabled = true;
            try {
              await updateListing(id, user.id, { title, description: descInput?.value?.trim() || undefined });
              await loadAndRender();
            } catch (err) {
              console.error(err);
            } finally {
              (btn as HTMLButtonElement).disabled = false;
            }
          });
        });
        mount.querySelectorAll('.listing-delete').forEach((btn) => {
          btn.addEventListener('click', async () => {
            const id = (btn as HTMLElement).dataset.listingId;
            if (!id || !user?.id) return;
            if (!confirm('Delete this listing?')) return;
            (btn as HTMLButtonElement).disabled = true;
            try {
              await deleteListing(id, user.id);
              await loadAndRender();
            } catch (err) {
              console.error(err);
            } finally {
              (btn as HTMLButtonElement).disabled = false;
            }
          });
        });
      } catch (err) {
        console.error('[My Services]', err);
        mount.innerHTML = '<p class="text-red-600">Failed to load listings.</p>';
      }
    }

    subscribeAuth(() => {
      if (!redirectIfNeeded()) return;
      loadAndRender();
    });
    if (redirectIfNeeded()) loadAndRender();
  </script>
</Layout>
